<!DOCTYPE html>

@*this si the layout*@

<html>
<head>
    @*header Bootstrap*@
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    @*this is the cool bootstrap I did!*@

    <style>

        .top {
            text-decoration: none;
            padding: 10px;
            font-family: sans-serif;
            color: #fff;
            background: #000;
            border-radius: 100px;
        }
        body {
            background-color: #f5f5f5;
        }

        #types {
            border: 1px solid #ccc;
            box-shadow: 0 0 5px #ccc;
            padding: 10px;
        }


        footer {
            background-color: #343a40;
            color: #ff6a00;
            padding: 30px;
            margin-top: 20px;
        }
        }
    </style>



</head>
<body>


    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">The BEST BOOK STORE</span>
    </div>
    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            <div>
                @RenderBody()
            </div>

            @*send back up!*@
            <footer>
                <a href="#" class="top">Back to the Top...</a>
            </footer>
        </div>
    </div>  
</body>
</html>
