<!DOCTYPE html>

@*this si the layout*@

<html>
<head>
    @*header Bootstrap*@
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    @*this is the cool bootstrap I did!*@

    <style>

        .top {
            text-decoration: none;
            padding: 10px;
            font-family: sans-serif;
            color: #fff;
            background: #000;
            border-radius: 100px;
        }

        body {
            background-color: #f5f5f5;
        }

        #types {
            border: 1px solid #ccc;
            box-shadow: 0 0 5px #ccc;
            padding: 10px;
        }


        footer {
            background-color: #343a40;
            color: #ff6a00;
            padding: 30px;
            margin-top: 20px;
        }
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-1/css/all.min.css" integrity="sha512-ZYg+hQvLlM0W9C3P6vTpes5LmJ66G2EsroxDNzwD6qiulckldb29eD9I672HL2X+LH5nRhY1sQqZLJGB+aUUPg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>


    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">SPORTS STORE</div>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>



    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">The BEST BOOK STORE</span>
    </div>
    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            <div>
                @RenderBody()
            </div>

            @*send back up!*@
            <footer>
                <a href="#" class="top">Back to the Top...</a>
            </footer>
        </div>
    </div>
</body>
</html>
